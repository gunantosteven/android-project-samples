<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.imasdroid.hanoi.MainActivity">

    <TextView android:text="Masukan Jumlah Piringan :" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewJumlahPiringan" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextJumlahPiringan"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewJumlahPiringan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Minimal 3 buah piringan maksimal 6"
        android:id="@+id/textView"
        android:layout_below="@+id/editTextJumlahPiringan"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="78dp"
        android:layout_alignRight="@+id/editTextJumlahPiringan" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mulai"
        android:id="@+id/btnMulai"
        android:onClick="proses"
        android:layout_below="@+id/editTextJumlahPiringan"
        android:layout_alignRight="@+id/editTextJumlahPiringan"
        android:layout_alignLeft="@+id/editTextJumlahPiringan" />

</RelativeLayout>
